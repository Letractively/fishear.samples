<html 
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
	xmlns:p="tapestry:parameter"
>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <title>${appTitle}</title>
    </head>
    <body>
        <!-- start header -->
		<t:jquery.dialog t:clientId="loginDialog" params="literal:{width:600,draggable:true,title:'Account Login'}">
		    <t:zone t:id="loginDialogZone" id="loginDialogZone">
			    Type any name and any password.
		    	<t:component t:id="loginForm" />
		    </t:zone>
	    </t:jquery.dialog>
        <div id="header">
            <div id="logo">
                <h1>
                    <t:pagelink page="index">${appTitle}</t:pagelink>
                </h1>
            </div>
        	<table id="menubar" >
        		<tr><td>
		            <div id="menu">
		                <ul>
		                    <li t:type="loop" t:source="MenuItems" t:value="MenuItem" t:class="prop:classForPageName">
		                        <a href="${pageUrl}">${PageTitle}</a>
		                    </li>
		                </ul>
		            </div>
        		</td></tr>
        		<tr><td>
					<t:jquery.dialoglink t:id="loginLink" t:dialog="loginDialog" >
		           		<t:component t:id="accountInfo" onclickAction="literal:jQuery('#loginLink').click();return false;"/>
					</t:jquery.dialoglink>
        		</td></tr>
        	</table>
        </div>
        <!-- end header -->
        <!-- start page -->
        <div id="page">
            <!-- start content -->
            <div id="content">
                <div class="post">
                    <div class="title">
                        <h2>${title}</h2>
                    </div>
                    <div class="entry">
                    	<t:alerts />
                        <t:body/>
                    </div>
                </div>
            </div>
            <!-- end content -->
            <br style="clear: both;"/>
        </div>
        <!-- end page -->
        <!-- start footer -->
        <div id="footer">
            <p class="legal">
                &copy;2011 RT. All Rights Reserved.
            </p>
        </div>
        <!-- end footer -->
    </body>
</html>
